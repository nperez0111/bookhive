{
  "name": "bookhive",
  "type": "module",
  "engines": {
    "bun": ">=1.3.9"
  },
  "scripts": {
    "seed:db": "bun run src/initialize.ts",
    "dev": "bun run build:assets && bun --hot run src/index.ts",
    "build:assets": "bun run scripts/build-assets.ts",
    "build": "bun run lexgen && bun run build:server",
    "build:server": "bun run scripts/build-server.ts",
    "test": "bun test src",
    "test:run": "bun test src --no-watch",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lexgen": "lex-cli generate",
    "postlexgen": "prettier --write ./src/bsky/lexicon/**/*.ts",
    "start": "bun run src/index.ts",
    "ios": "bun run --cwd app ios",
    "android": "bun run --cwd app android",
    "ios:build": "bun run --cwd app ios:build",
    "ios:submit": "bun run --cwd app ios:submit",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "pino": "^10.1.0",
    "pino-abstract-transport": "2.0.0",
    "sharp": "0.33.5"
  },
  "devDependencies": {
    "@atcute/atproto": "3.1.10",
    "@atcute/bluesky": "^3.2.17",
    "@atcute/car": "3.0.5",
    "@atcute/client": "^4.2.1",
    "@atcute/identity-resolver": "1.2.2",
    "@atcute/identity-resolver-node": "1.0.3",
    "@atcute/jetstream": "^1.1.2",
    "@atcute/lex-cli": "2.5.3",
    "@atcute/lexicons": "1.2.9",
    "@atcute/oauth-node-client": "^1.1.0",
    "@atcute/tid": "1.1.2",
    "@hono/prometheus": "^1.0.2",
    "@hono/zod-validator": "^0.4.3",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.54.0",
    "@opentelemetry/core": "2.5.1",
    "@opentelemetry/exporter-trace-otlp-http": "0.212.0",
    "@opentelemetry/resources": "2.5.1",
    "@opentelemetry/sdk-node": "0.212.0",
    "@opentelemetry/sdk-trace-base": "2.5.1",
    "@opentelemetry/semantic-conventions": "1.29.0",
    "@tailwindcss/cli": "4.1.18",
    "@tailwindcss/forms": "^0.5.10",
    "@types/bun": "latest",
    "@types/shimmer": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "bun-plugin-tailwind": "0.1.2",
    "csv-parse": "5.6.0",
    "date-fns": "4.1.0",
    "envalid": "^8.1.1",
    "eslint": "^9.39.2",
    "hono": "^4.11.9",
    "ipx": "3.0.1",
    "iron-session": "^8.0.4",
    "kysely": "^0.28.9",
    "ohash": "1.1.4",
    "pino": "^10.1.0",
    "pino-abstract-transport": "2.0.0",
    "pino-pretty": "^13.1.3",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "prom-client": "15.1.3",
    "shimmer": "1.2.1",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animated": "^2.0.0",
    "typescript": "^5.9.3",
    "unstorage": "1.13.1",
    "zod": "^3.25.76"
  },
  "module": "src/index.ts",
  "private": true,
  "workspaces": [
    "app"
  ]
}
