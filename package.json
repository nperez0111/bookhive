{
  "name": "bookhive",
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": ">=24.0.0"
  },
  "type": "module",
  "scripts": {
    "seed:db": "node ./src/initialize.js",
    "dev": "concurrently --kill-others \"pnpm:dev:backend\" \"pnpm:dev:css\" \"pnpm:dev:frontend\" -r -p none",
    "dev:backend": "nodemon --exec 'pnpm run build:js:backend && pnpm start' --watch src -e ts,tsx | pino-pretty",
    "dev:frontend": "pnpm run build:js:frontend --watch",
    "dev:css": "pnpm run build:css --watch",
    "build:js:frontend": "esbuild src/client/index.tsx --bundle --outfile=public/js/client.js --alias:react=hono/jsx/dom --sourcemap",
    "build:js:backend": "rm -rf dist && node ./esbuild.cjs",
    "build:css": "tailwindcss -m -i ./src/index.css -o ./public/output.css",
    "build": "concurrently \"pnpm:build:css\" \"pnpm:build:*\" \"pnpm run lexgen --yes\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lexgen": "lex gen-server ./src/bsky/lexicon ./lexicons/*",
    "postlexgen": "prettier --write ./src/bsky/lexicon/*",
    "start": "node --require ./dist/instrumentation.cjs ./dist/index.js",
    "ios": "pnpm run --prefix=app ios",
    "android": "pnpm run --prefix=app android",
    "ios:build": "pnpm run --prefix=app ios:build",
    "ios:submit": "pnpm run --prefix=app ios:submit"
  },
  "dependencies": {
    "@atcute/car": "3.0.5",
    "@atproto/api": "^0.18.8",
    "@atproto/common": "^0.5.3",
    "@atproto/identity": "^0.4.10",
    "@atproto/lexicon": "^0.6.0",
    "@atproto/oauth-client-node": "^0.3.13",
    "@atproto/sync": "^0.1.39",
    "@atproto/syntax": "^0.4.2",
    "@atproto/xrpc-server": "^0.10.4",
    "@hono/node-server": "^1.19.7",
    "@hono/prometheus": "^1.0.2",
    "@hono/zod-validator": "^0.4.3",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/auto-instrumentations-node": "0.54.0",
    "@opentelemetry/exporter-metrics-otlp-http": "0.56.0",
    "@opentelemetry/exporter-trace-otlp-http": "0.56.0",
    "@opentelemetry/sdk-metrics": "1.29.0",
    "@opentelemetry/sdk-node": "0.56.0",
    "@opentelemetry/sdk-trace-node": "1.29.0",
    "@opentelemetry/semantic-conventions": "1.28.0",
    "@tanstack/react-query": "^5.90.12",
    "@types/better-sqlite3": "^7.6.13",
    "@types/shimmer": "^1.2.0",
    "axios": "^1.13.2",
    "better-sqlite3": "12.2.0",
    "csv-parse": "5.6.0",
    "date-fns": "4.1.0",
    "dotenv": "^16.6.1",
    "envalid": "^8.1.1",
    "esbuild-node-externals": "1.15.0",
    "hono": "^4.11.0",
    "hono-pino": "0.7.0",
    "html-entities": "2.5.2",
    "ipx": "3.0.1",
    "iron-session": "^8.0.4",
    "jiti": "2.4.0",
    "kysely": "^0.28.9",
    "multiformats": "^13.4.2",
    "ohash": "1.1.4",
    "pino": "^10.1.0",
    "pino-abstract-transport": "2.0.0",
    "prom-client": "15.1.3",
    "sharp": "0.33.5",
    "shimmer": "1.2.1",
    "unstorage": "1.13.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@atproto/lex-cli": "^0.8.3",
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/ws": "8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "cosmiconfig": "5.2.1",
    "esbuild": "0.24.0",
    "eslint": "^9.39.2",
    "nodemon": "^3.1.11",
    "pino-pretty": "^13.1.3",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animated": "^2.0.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@parcel/watcher"
    ],
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "better-sqlite3",
      "cbor-extract",
      "esbuild",
      "protobufjs",
      "sharp",
      "unrs-resolver"
    ]
  }
}
